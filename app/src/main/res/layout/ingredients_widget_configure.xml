<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/widget_config_padding">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_header"
        android:textColor="@color/widget_config_header_text"
        android:textSize="@dimen/widget_config_header_textsize" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/widget_recipe_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/widget_config_margin" />

</LinearLayout>